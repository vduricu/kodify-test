{
  "extends": "airbnb/base",
  "parser": "babel-eslint",
  "rules": {
    "comma-dangle": 0,
    "max-len": [
      "error",
      150,
      2,
      {
        "ignoreComments": true
      }
    ],
    "quote-props": [
      "error",
      "consistent-as-needed"
    ],
    "no-cond-assign": [
      "warn",
      "except-parens"
    ],
    "no-unused-vars": [
      1,
      {
        "vars": "local",
        "args": "none"
      }
    ],
    "radix": 0,
    "no-else-return": 0,
    "no-param-reassign": 0,
    "default-case": 0,
    "new-cap": 0,
    "quotes": [
      "error",
      "double",
      {
        "allowTemplateLiterals": true,
        "avoidEscape": true
      }
    ],
    "global-require": 0,
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "import/no-dynamic-require": 0,
    "import/no-extraneous-dependencies": 0,
    "strict": [
      0,
      "global"
    ],
    "no-restricted-syntax": [
      2,
      "LabeledStatement",
      "WithStatement"
    ],
    "no-continue": 0,
    "no-await-in-loop": 0
  },
  "env": {
    "node": true,
    "mocha": true
  }
}
